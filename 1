# include <stdio.h>
int pow(int one , int two);
int main(){
    float number1 ,number2;
    number1 = number2 = 0 ;
    int c ;
    int i = 1 ;
    int helper = 1;
    int j = -50 ;
    printf("ENTER your first number: \n");
    while ((c = getchar()) != EOF){
        if ( c == '-'){
            helper = -1;
        }
        else if (c >= '0' && c <= '9'){
            number1 = number1 * 10 + c - '0';
            if (j >=0){
                j++;
            }
        }
        else if ( c == '.' ){
                j = 0 ;
        }
    }
    number1 = (number1 * helper) / pow(10,j) ;
    printf("\nENTER your secend number: \n");
    j = -50 ;
    helper = 1 ;
    while ((c = getchar()) != EOF){
        if ( c == '-'){
            helper = -1;
        }
        else if (c >= '0' && c <= '9'){
            number2 = number2 * 10 + c - '0';
            if (j >= 0){
                j++;
            }
        }
        else if ( c == '.' ){
                j = 0 ;
        }
    }
    number2 = (number2 * helper) / pow(10,j) ;

    number1 = number1 + number2;
    printf("%f\n",number1);
    return 0 ;
}
int pow(int one ,int two){
    int i = 0;
    int number = 1;
    for ( i ; i < two ;i++ ){
        number = number * one;
    }
    return number ;
}
